{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "strict": false,
    "types": ["node"],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "outDir": "./public",
    "allowSyntheticDefaultImports": true,
  },
  "exclude": [
    "node_modules",
    "*.test.*"
  ],
}