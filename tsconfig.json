{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": false,
    "types": ["node"],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "outDir": "./public",
    "rootDir": "./src",
    "declaration": true,
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "*.test.*"]
}
